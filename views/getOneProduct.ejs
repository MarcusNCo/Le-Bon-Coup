<%- include('./partials/head'); %>

<%- include('./partials/header'); %>

<main>
    <section class="oneProduct">
        <div class="container-fluid">
            <div class="row ">
                <div class="col ">
                    <div class=" mx-auto card mt-5 shadow p-3 mb-5 bg-body rounded borderCard">
                        <div class="card-body text-center">
                            <img class="w-100" src="<%=product.img_product%>" alt="Image du produit">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-center"><%=product.title%></h5>
                            <p class="card-text"> <span class="cardStyle">Lieu:</span> <%=product.place%></p>
                            <p class="card-text"> <span class="cardStyle">Prix:</span> <%=product.price%>â‚¬</p>
                            <p class="card-text"> <span class="cardStyle">Date de publication:</span>
                                <%=product.advert_date%></p>
                            <p class="card-text"> <span class="cardStyle">Description:</span> <%=product.description%>
                            </p>
                            <p class="card-text"> <span class="cardStyle">Etat du produit:</span> <%=product.state%></p>
                        </div>
                    </div>
                    <div class="card mt-5 borderCard sendCard">
                        <div class="card-body sendMsg">
                            <div>
                                <div><a href="" class="btn btnBuy">Acheter</a></div>
                                <div><a href="" class="btn btnSendMsg">Message</a></div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="sellerSentence text-center">
                    <div> 
                        <p>Voir le profil du vendeur:<a id="seller" href="/profil/<%=product.id_members%>"> <strong><%=product.lastname%></strong></a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('./partials/footer'); %>