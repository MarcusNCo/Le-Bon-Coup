<%- include('./partials/head'); %>

<%- include('./partials/header'); %>

<main>
    <section class="home">
        <div class="listProduct">
            <div class="row d-flex m-2 mt-4">
                <% products.forEach(function(data) { %>
                <%  let formatedDate = new Date(data.advert_date)
                    let options = {weekday: "long", year: "numeric", month: "long", day: "2-digit"};
                    formatedDate = formatedDate.toLocaleDateString("fr-FR", options)
                %>
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <img class="w-100" src="<%=data.img_product%>" alt="Image du produit">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%=data.title%></h5>
                            <p class="card-text"><%=data.place%></p>
                            <p class="card-text">Vendu par: <%=data.lastname%> <%=data.firstname%></p>
                            <p class="card-text">Prix: <%=data.price%>â‚¬</p>
                            <p class="card-text">Date de publication: <%=formatedDate%></p>
                            <p class="card-text">Description: <%=data.description%></p>
                            <p class="card-text">Etat du produit: <%=data.state%></p>
                            <div class="d-flex">
                                <div class="bottom-item w-50">
                                    <a href="/product/<%= data.id  %> " class="btn btn-primary">Voir l'annonce</a>
                                </div>
                                <div class="d-flex bottom-item w-50 justify-content-end">
                                <form action="" method="post">
                                    <input type="hidden" name="product_id" value="<%=data.id%>">
                                    <button class="iconFav">
                                        <img src="/img/icon/heart-solid.svg" alt="icon heart">
                                    </button>    
                                
                                </a>
                                </form>    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>
</main>

<%- include('./partials/footer'); %>