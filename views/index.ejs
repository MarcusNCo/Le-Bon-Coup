<%- include('./partials/head'); %>

<%- include('./partials/header'); %>

<main>
    <section class="home">
        <div class="listProduct">
            <div class="row d-flex m-2 mt-4">
                <% products.forEach(function(data) { %>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 indexCard">
                        <div class="card">
                            <div class="card-body text-center">
                                <img class="w-100" src="<%=data.img_product%>" alt="Image du produit">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title"><%=data.title%></h5>
                                <p class="card-text"><span class="cardStyle"></span><%=data.place%></p>
                                <p class="card-text"><span class="cardStyle">Vendu par: </span><%=data.lastname%> <%=data.firstname%></p>
                                <p class="card-text"><span class="cardStyle">Prix: </span><%=data.price%>â‚¬</p>
                                <p class="card-text"><span class="cardStyle">Date de publication: </span><%=data.advert_date%></p>
                                <p class="card-text"><span class="cardStyle">Description: </span><%=data.description%></p>
                                <p class="card-text"><span class="cardStyle">Etat du produit: </span><%=data.state%></p>
                                <a href="/product/<%= data.id  %> " class="btn btn-primary btnSee">Voir l'annonce</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>
</main>

<%- include('./partials/footer'); %>