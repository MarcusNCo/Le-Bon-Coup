<%- include('./partials/head'); %>

<%- include('./partials/header'); %>

<%  let formatedDate = new Date(member[0].inscription_date)
    let options = {weekday: "long", year: "numeric", month: "long", day: "2-digit"};
    formatedDate = formatedDate.toLocaleDateString("fr-FR", options)
%>
<div class="ps-3 pt-2">
    <h2>Profil</h2>
    <p><%= member[0].lastname %></p>
    <p><%= formatedDate %></p>
    <p><%= member[0].department %></p>
    <h3><%=member.length%> annonces</h3>
</div>

<% for (let i = 0; i < member.length; i++) { %>
    
    <div class="card w-100">
        <div class="card-body text-center d-flex">
            <img class="w-100 imgProfil" src="<%=member[0].img_product%>" alt="Image du produit">
        </div>
        <div class="card-body">
            <h5 class="card-title"><%=member[0].title%></h5>
            <p class="card-text"><%=member[0].place%></p>
            <p class="card-text">Vendu par: <%=member[0].lastname%> <%=member[0].firstname%></p>
            <p class="card-text">Prix: <%=member[0].price%>â‚¬</p>
            <p class="card-text">Date de publication: <%=formatedDate%></p>
            <p class="card-text">Description: <%=member[0].description%></p>
            <p class="card-text">Etat du produit: <%=member[0].state%></p>
            <a href="/product/<%= member[0].id  %> " class="btn btn-primary">Voir l'annonce</a>
        </div>
    </div>
    <% } %>




<%- include('./partials/footer'); %>